<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/menuBackground"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/streakbanner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/menu"
        android:layout_centerInParent="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="@string/streaks_calendar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <LinearLayout
        android:id="@+id/calendar"
        android:layout_width="250dp"
        android:layout_height="220dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/streakbanner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Streak Message -->
        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/streak_circle"
            android:gravity="center">

            <TextView
                android:id="@+id/streak_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="5"
                android:textColor="@android:color/white"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/streak_days"
                android:layout_centerHorizontal="true"
                android:text="DAYS"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:text="Keep up your streak!"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <GridLayout
            android:id="@+id/calendar_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:columnCount="7"
            android:padding="10dp"
            android:rowCount="5" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/streak_week"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/calendar">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/saturday"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="sat"
                android:textColor="#B3B3B3"
                android:textStyle="italic"
                android:padding="8dp"
                android:layout_marginStart="18dp"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/monday"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="mon"
                android:textColor="#B3B3B3"
                android:textStyle="italic"
                android:padding="8dp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="@id/saturday"/>

            <TextView
                android:id="@+id/tuesday"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="tue"
                android:textColor="#B3B3B3"
                android:textStyle="italic"
                android:padding="8dp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="@id/monday"/>

            <TextView
                android:id="@+id/wednesday"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="wed"
                android:textColor="#D9D9D9"
                android:textStyle="italic"
                android:padding="8dp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="@id/tuesday"/>

            <TextView
                android:id="@+id/thursday"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="thu"
                android:textColor="#B3B3B3"
                android:textStyle="italic"
                android:padding="8dp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="@id/wednesday"/>

            <TextView
                android:id="@+id/friday"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="fri"
                android:textColor="#B3B3B3"
                android:textStyle="italic"
                android:padding="8dp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="@id/thursday"/>

            <TextView
                android:id="@+id/sunday"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="sun"
                android:textColor="#B3B3B3"
                android:textStyle="italic"
                android:padding="8dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="14dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            >

            <View
                android:id="@+id/circle1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="18dp"
                android:background="@drawable/streak_dayoff"
                app:layout_constraintStart_toStartOf="parent" />

            <View
                android:id="@+id/circle2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/streak_dayoff"
                />

            <View
                android:id="@+id/circle3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="14dp"
                android:background="@drawable/streak_dayoff"
                 />

            <View
                android:id="@+id/circle4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="14dp"
                android:background="@drawable/streak_dayoff"
                />

            <View
                android:id="@+id/circle5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="14dp"
                android:background="@drawable/streak_dayoff"
                />

            <View
                android:id="@+id/circle6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="14dp"
                android:background="@drawable/streak_dayoff"
                />

            <View
                android:id="@+id/circle7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="18dp"
                android:background="@drawable/streak_dayoff"
                 />

        </LinearLayout>
        </LinearLayout>


    <View
        android:id="@+id/achievemntsbanner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="@drawable/menu"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/streak_week">
    </View>

    <!--        app:layout_constraintTop_toBottomOf="@id/streak_week"-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/achievements"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/streak_week">

    </TextView>

    <LinearLayout
        android:id="@+id/boxes_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/achievemntsbanner">

        <View
            android:id="@+id/box1"
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/cornered_box" />

        <View
            android:id="@+id/box2"
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/cornered_box" />

        <View
            android:id="@+id/box3"
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/cornered_box" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/account"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="20dp"
        android:contentDescription="Account"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerInside"
        android:src="@drawable/account_circle"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@id/menuBackground"
        app:layout_constraintEnd_toEndOf="@id/menuBackground"
        app:layout_constraintTop_toTopOf="@id/menuBackground"
        />

    <ImageButton
        android:id="@+id/home"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="Home"
        android:focusable="true"
        android:scaleType="centerInside"
        android:src="@drawable/home"
        app:layout_constraintBottom_toBottomOf="@id/menuBackground"
        app:layout_constraintTop_toTopOf="@id/menuBackground"
        app:layout_constraintStart_toEndOf="@id/stats"
        app:layout_constraintEnd_toStartOf="@id/account"
        />

    <ImageButton
        android:id="@+id/stats"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:contentDescription="Status"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerInside"
        android:src="@drawable/stats"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@id/menuBackground"
        app:layout_constraintStart_toStartOf="@id/menuBackground"
        app:layout_constraintTop_toTopOf="@id/menuBackground"
        />
</androidx.constraintlayout.widget.ConstraintLayout>